{
  "name": "genius-web-app",
  "version": "1.0.0",
  "description": "Genius Web App - Class Management System",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "electron": "electron electron-main.js",
    "electron-dev": "cross-env ELECTRON_IS_DEV=1 electron electron-main.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=always"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "path": "^0.12.7",
    "stripe": "^14.21.0"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  },
  "keywords": [
    "web",
    "app",
    "class",
    "management"
  ],
  "author": "Genius Team",
  "license": "MIT",
  "build": {
    "appId": "com.genius.app",
    "productName": "Genius",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md",
      "!server.js"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/darkgenius.png",
      "compression": "maximum"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/darkgenius.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/darkgenius.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Genius"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "genius-app"
    }
  }
}
